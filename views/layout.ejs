<!DOCTYPE html>
<!-- Website Template by freewebsitetemplates.com -->
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%=pageTitle%></title>
		<link rel="stylesheet" type="text/css" href="/css/style.css" />
		<link
			rel="stylesheet"
			type="text/css"
			href="/css/mobile.css"
			media="screen and (max-width : 568px)"
		/>
		<link rel="shortcut icon" type="image/png" href="/images/icons/icon-mustache.png" />
		<script type="text/javascript" src="/js/mobile.js"></script>
	</head>
	<body>
		<div id="header">
			<a href="/" class="logo">
				<img src="/images/logo.jpg" alt="" />
			</a>

			<ul id="navigation">
				<li class="<%- path === '/' ? 'selected' : '' %>">
					<a href="/">home</a>
				</li>
				<li class="<%- path.includes('about') ? 'selected' : '' %>">
					<a href="/about">about</a>
				</li>
				<li class="<%- path.includes('styles') && !path.includes('favorites') ? 'selected' : '' %>">
					<a href="/styles">gallery</a>
				</li>
				<li class="<%- path.includes('blog') ? 'selected' : '' %>">
					<a href="/blog">blog</a>
				</li>
				<li class="<%- path === '/contacts/new' ? 'selected' : '' %>">
					<a href="/contacts/new">contact</a>
				</li>
				<% if (isLoggedIn) { %>
				<li class="<%- path === '/styles/favorites' ? 'selected' : '' %>">
					<a href="/styles/favorite">Favorite Styles</a>
				</li>
				<li>
					<a href="/auth/logout">Logout</a>
				</li>
				<% } else { %>
				<li class="<%- path === '/auth/login' ? 'selected' : '' %>">
					<a href="/auth/login">Login</a>
				</li>
				<% } %>
			</ul>

			<% if (user.isAdmin) { %>
			<!-- This ul only appears for admins -->
			<ul id="admin-navigation">
				<li class="<%- path === '/contacts' ? 'selected' : '' %>">
					<a href="/contacts">contact requests</a>
				</li>
				<li class="<%- path === '/user-access' ? 'selected' : '' %>">
					<a href="/user-access">user access</a>
				</li>
				<li class="<%- path === '/inspiration' ? 'selected' : '' %>">
					<a href="/inspiration">inspiration</a>
				</li>
			</ul>
			<% } %>
		</div>
		<div id="body"><%- body %></div>
		<div id="footer"><%- include('partials/social.ejs') %></div>
	</body>
</html>
